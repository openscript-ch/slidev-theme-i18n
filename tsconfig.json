{
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "target": "es2020",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "allowJs": true,
  },
  "include": [
    ".eslintrc.cjs",
    "./**/*.ts",
    "./**/*.vue",
    "./**/*.js"
  ],
  "exclude": ["**/dist/**", "node_modules"]
}
